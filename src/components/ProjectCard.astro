---
// src/components/ProjectCard.astro
const { title, description, image, tech, links = [] } = Astro.props;
---

<div class="bg-[#111] p-6 rounded-xl shadow-md flex flex-col md:flex-row gap-6 hover:bg-[#1a1a1a] transition">
  <div class="w-72 h-72 overflow-hidden rounded-lg max-w-sm">
    <img src={image} alt={title} class="rounded-lg transform hover:scale-105 transition duration-300" />
  </div>

  <div class="flex flex-col justify-between">
    <div>
      <h3 class="text-white text-xl font-bold mb-2">{title}</h3>
      <div class="flex flex-wrap gap-2 mb-4">
        {tech.map(t => (
          <span class="bg-gray-800 text-sm text-white px-3 py-1 rounded-full">{t}</span>
        ))}
      </div>
      <p class="text-gray-400 text-sm">{description}</p>
    </div>

    {links.length > 0 && (
      <div class="flex gap-3 mt-4">
        {links.map(link => (
          <a href={link.href} target="_blank" class="text-sm bg-gray-700 hover:bg-gray-600 transition px-4 py-1 rounded text-white">
            {link.label}
          </a>
        ))}
      </div>
    )}
  </div>
</div>
